// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tutorial {
  id        Int          @id @default(autoincrement())
  title     String
  category  String
  type      TutorialType
  content   String? 
  videoUrl  String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  userTutorials UserTutorial[]
}

model User {
  id        Int            @id @default(autoincrement())
  email     String         @unique
  password  String
  role      Role           @default(USER)
  name      String?
  image     String?
  tutorials UserTutorial[]
}

model UserTutorial {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  tutorial    Tutorial @relation(fields: [tutorialId], references: [id])
  tutorialId  Int
  completedAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

enum TutorialType {
  VIDEO
  TEXT
}
